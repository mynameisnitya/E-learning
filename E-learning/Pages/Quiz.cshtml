@page
@model E_learning.Pages.QuizModel
@{
}
<p id="score">Score: @Model.Score</p>
<h1>@Html.Raw(Model.CurrentQuestion.question)</h1>
<form method="post">
    
    @for (var i = 0; i < Model.CurrentQuestion.Answers.Count; i++)
    {
      
        <div class="form-group">
            <label for="answer@(i)">@Html.Raw(Model.CurrentQuestion.Answers[i])</label>
            <input type="radio" name="choice" value="@Model.CurrentQuestion.Answers[i]" id="answer@(i)" />

        </div>
    }
    <div class="form-group">
        <input type="submit" value="Submit" />
    </div>
    <h3>Message: @Html.Raw(TempData["Message"])</h3>

</form>

